rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - allow authenticated users to upload their own profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true; // Allow anyone to read profile pictures
      allow write: if request.auth != null && request.auth.uid == userId
                   && resource == null // Only allow new uploads, not overwriting
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Resources - allow authenticated users to upload resources
    match /resources/{userId}/{allPaths=**} {
      allow read: if request.auth != null; // Only authenticated users can read resources
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB for resources
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('text/.*') ||
                       request.resource.contentType.matches('application/msword') ||
                       request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*'));
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
